---
import Icon from 'astro-icon';
const classes = {};

const skills = [
    ['html', 'mdi:language-html5'],
    ['css', 'mdi:language-css3'],
    ['tailwind', 'mdi:tailwind'],
    ['javascript', 'mdi:language-javascript'],
    ['react', 'mdi:react'],
    ['nodejs', 'mdi:nodejs'],
    ['expressjs', 'simple-icons:express'],
    ['vite', 'file-icons:vite'],
    ['webpack', 'mdi:webpack'],
    ['Git', 'mdi:git'],
    ['Github', 'mdi:github'],

    //not sure
    // ['Rest APIs', 'mdi:github'],
    // ['neovim', 'simple-icons:neovim'],
    // ['debian', 'grommet-icons:debian'],

    // not good at
    // ['Mysql', 'grommet-icons:mysql'],
    // ['astrojs', 'simple-icons:astro'],
];
---

<section id='skills' class="text-slate-50 pt-[6rem] px-main xs>:px-4">
    <h2
        class={`text-center capitalize text-2xl pb-[3rem] relative
              before:absolute
              before:border-b-2 before:border-b-primary
              before:w-[2.3rem] before:h-[38px]`}
    >
        My <span class="text-primary">back pack</span>
    </h2>

    <style>
        .skillsGrid {
            grid-template-columns: repeat(auto-fit, minmax(150px, 1fr));
        }
    </style>
    <div class="skillsGrid grid gap-5 max-w-lg mx-auto">
        {
            skills.map((skill) => {
                return (
                    <div
                        class={`flex flex-no-wrap items-center border-[1px] border-primary py-2
                          px-3 rounded-lg text-primary uppercase subtleHoverSlider group`}
                    >
                        <Icon class="text-primary h-7 group-hover:scale-[1.2] duration-300" name={skill[1]} />
                        <span class="text-white ml-2 pt-[2px]">{skill[0]}</span>
                    </div>
                );
            })
        }
    </div>
</section>
