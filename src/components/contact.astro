---
import Icon from 'astro-icon';
import SocialMedia from './shared/socialMedia.astro';
const classes = {
    input: `border-l-2 border-l-primary px-2 py-1 bg-gray-400/10 block w-full mb-4`,
};
---

<section
    aria-label="contact"
    id="contact"
    class="text-slate-50 pt-[6rem] px-main xs>:px-4"
>
    <h2
        class={`text-center capitalize text-2xl mb-[3rem]
               w-full h-[48px]`}
    >
        <span class="border-b-4 border-b-primary pb-2">
            Get In Touch
        </span>
    </h2>
    <form data-netlify="true" name="contact form" class="mx-auto max-w-[400px]" id="form">
        <input
            aria-label="your name"
            type="text"
            name="name"
            class={classes.input}
            placeholder="Name"
        />
        <input
            aria-label="your email"
            type="email"
            name="email"
            class={classes.input}
            placeholder="Email"
        />
        <textarea
            aria-label="your message"
            name="message"
            rows="4"
            class={classes.input}
            placeholder="Message"></textarea>

        <button
            id="submit"
            type="submit"
            class="cursor-pointer text-lg border-l-2 border-l-primary px-2 py-1 mt-3 subtleHoverSlider group"
        >
            <!-- <Icon
                name="ion:paper-airplane"
                class="mr-2 w-6 inline text-primary group-hover:rotate-[35deg] duration-300"
            /> -->
            <svg
                viewBox="0 0 512 512"
                class="mr-2 w-6 inline text-primary group-hover:rotate-[35deg] duration-300"
                astro-icon="ion:paper-airplane"
            >
                <path
                    fill="currentColor"
                    d="m32 272 128 48 16 160 80-112 112 112L480 32 32 272zm318.7 145.4L256 320l128-176-192 153.8-82.6-31 322-172.5-80.7 323.1z"
                ></path>
            </svg>
            Sumbit
        </button>
    </form>

    <!-- <h3 class="capitalize mx-auto w-max mt-10 text-xl">other channels</h3> -->
    <!-- <SocialMedia style="mx-auto w-max" /> -->
</section>
