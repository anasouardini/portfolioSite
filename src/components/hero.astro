        .gradient-70 {
            background: linear-gradient(
                to right,
                rgb(17 24 39),
                rgb(17 24 39 / 0.95),
                rgb(17 24 39 / 0.9),
                rgb(17 24 39 / 0.85),
                transparent
            );
        }
