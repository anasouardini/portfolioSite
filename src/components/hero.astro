            aria-label="my name"
            class="text-primary capitalize uppercase text-xl tracking-wider mb-1"
        >
            I'm astronaut
        </p>
        <!-- hero title -->
        <script>
            const titleLetters = document.getElementById('heroTitle').children;

            // loop
            {
                let i = 0;
                setInterval(() => {
                    if (i == titleLetters.length) {
                        i = 0;
                        return;
                    }

                    titleLetters[i].classList.toggle('text-primary');

                    i++;
                }, 100);
            }
        </script>
        <h1 id="heroTitle" class="text-[2.5rem] mb-[1rem]">
            {
                'A Web Engineer'.split('').map((letter) => {
                    return <span>{letter}</span>;
